CC = g++

#The -c flag makes .o files, that will speed up future 
#compilations in multi-source projects
CFLAGS = -c -g

LDFLAGS = -Wall -pedantic
SOURCES = superProg.cpp lattice.cpp classes.cpp auxiliary.cpp superInteraction.cpp
OBJECTS = $(SOURCES:.cpp=.o)
EXECUTABLE = super

MY_HEADERS = classes.h auxiliary.h lattice.h superInteraction.h

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

